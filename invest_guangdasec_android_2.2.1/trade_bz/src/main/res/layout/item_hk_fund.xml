<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trade_color_white"
    android:orientation="vertical">

    <View android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/trade_normal_background"/>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/hk_select_item_height"
        android:layout_marginTop="@dimen/hk_select_item_height"
        android:orientation="horizontal">

        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="@string/hk_capital_item0"
            android:textSize="@dimen/hk_select_item"/>

        <TextView android:id="@+id/tv_assert_val"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/no_text_set"
            android:textColor="@color/trade_text_color6"
            android:textSize="@dimen/hk_select_item"/>


        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="@string/hk_capital_item1"
            android:textSize="@dimen/hk_select_item"/>
        <TextView android:id="@+id/tv_enable_balance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/no_text_set"
            android:textColor="@color/trade_text_color6"
            android:textSize="@dimen/hk_select_item"/>
    </LinearLayout>

    <!--第二栏-->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/hk_select_item_height"
        android:orientation="horizontal">

        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hk_select_height"
            android:layout_weight="0.6"
            android:text="@string/hk_capital_item2"
            android:textSize="@dimen/hk_select_item"/>

        <TextView android:id="@+id/tv_fund_tranin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hk_select_height"
            android:layout_weight="1"
            android:hint="@string/no_text_set"
            android:textColor="@color/trade_text_color6"
            android:textSize="@dimen/hk_select_item"/>

        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hk_select_height"
            android:layout_weight="0.6"
            android:text="@string/hk_capital_item3"
            android:textSize="@dimen/hk_select_item"/>
        <TextView android:id="@+id/tv_fund_tranout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hk_select_height"
            android:layout_weight="1"
            android:hint="@string/no_text_set"
            android:textColor="@color/trade_text_color6"
            android:textSize="@dimen/hk_select_item"/>
    </LinearLayout>

    <!--第二栏-->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/hk_select_item_height"
        android:orientation="horizontal">

        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hk_select_height"
            android:layout_weight="0.6"
            android:text="@string/hk_capital_item4"
            android:textSize="@dimen/hk_select_item"/>

        <TextView android:id="@+id/tv_fund_realin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hk_select_height"
            android:layout_weight="1"
            android:hint="@string/no_text_set"
            android:textColor="@color/trade_text_color6"
            android:textSize="@dimen/hk_select_item"/>


        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hk_select_height"
            android:layout_weight="0.6"
            android:text="@string/hk_capital_item5"
            android:textSize="@dimen/hk_select_item"/>
        <TextView android:id="@+id/tv_fund_realout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hk_select_height"
            android:layout_weight="1"
            android:hint="@string/no_text_set"
            android:textColor="@color/trade_text_color6"
            android:textSize="@dimen/hk_select_item"/>
    </LinearLayout>

    <!--第二栏-->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/hk_select_item_height"
        android:orientation="horizontal">

        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hk_select_height"
            android:layout_weight="0.6"
            android:text="@string/hk_capital_item10"
            android:textSize="@dimen/hk_select_item"/>

        <TextView android:id="@+id/tv_funduncomein"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hk_select_height"
            android:layout_weight="1"
            android:hint="@string/no_text_set"
            android:textColor="@color/trade_text_color6"
            android:textSize="@dimen/hk_select_item"/>


        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hk_select_height"
            android:layout_weight="0.6"
            android:text="@string/hk_capital_item11"
            android:textSize="@dimen/hk_select_item"/>
        <TextView android:id="@+id/tv_funduncomeout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hk_select_height"
            android:layout_weight="1"
            android:hint="@string/no_text_set"
            android:textColor="@color/trade_text_color6"
            android:textSize="@dimen/hk_select_item"/>
    </LinearLayout>

    <!--第二栏-->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/hk_select_item_height"
        android:orientation="horizontal">

        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hk_select_height"
            android:layout_weight="0.8"
            android:text="@string/hk_capital_item6"
            android:textSize="@dimen/hk_select_item"/>

        <TextView android:id="@+id/tv_fundnightout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hk_select_height"
            android:layout_weight="2.4"
            android:hint="@string/no_text_set"
            android:textColor="@color/trade_text_color6"
            android:textSize="@dimen/hk_select_item"/>


        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hk_select_height"
            android:layout_weight="0.8"
            android:text="@string/hk_capital_item8"
            android:textSize="@dimen/hk_select_item"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_fund_real_own"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hk_select_height"
            android:layout_weight="0.8"
            android:hint="@string/no_text_set"
            android:textColor="@color/trade_text_color6"
            android:textSize="@dimen/hk_select_item"
            android:visibility="gone"/>
    </LinearLayout>

    <!--第二栏-->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/hk_select_item_height"
        android:orientation="horizontal">

        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hk_select_height"
            android:layout_marginBottom="@dimen/hk_select_height"
            android:layout_weight="0.6"
            android:text="@string/hk_capital_item9"
            android:textSize="@dimen/hk_select_item"/>

        <TextView  android:id="@+id/tv_fund_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hk_select_height"
            android:layout_marginBottom="@dimen/hk_select_height"
            android:layout_weight="2.6"
            android:hint="@string/no_text_set"
            android:textColor="@color/trade_text_color6"
            android:textSize="@dimen/hk_select_item"/>

    </LinearLayout>
</LinearLayout>