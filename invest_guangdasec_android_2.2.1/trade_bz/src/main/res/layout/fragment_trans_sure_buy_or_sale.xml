<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/trade_normal_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/trade_color_white"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="13dp"
        android:paddingTop="13dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/trans_buy_or_sale0"
            android:textSize="@dimen/text_size"
            android:gravity="center"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="@string/trans_buy_or_sale4"
            android:textSize="@dimen/text_size"
            android:singleLine="true"
            android:maxLength="6"
            android:textColorHint="@color/trade_text_color0"
            android:textColor="@color/trade_text_color6"
            android:id="@+id/edt_trans_trade_code"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/tv_trans_trade_name"
            android:textSize="@dimen/text_size"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/trade_color_white"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="13dp"
        android:paddingTop="13dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/trans_buy_or_sale1"
            android:textSize="@dimen/text_size"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_trans_price_cut"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:background="@drawable/common_all_corner_shi"
            android:gravity="center"
            android:text="@string/trade_subtract"
            android:textColor="@color/trade_color_white"
            android:textSize="@dimen/login_button_text_size"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:hint="@string/trans_buy_or_sale12"
            android:textSize="@dimen/text_size"
            android:singleLine="true"
            android:inputType="numberDecimal"
            android:textColorHint="@color/trade_text_color0"
            android:textColor="@color/trade_text_color6"
            android:id="@+id/edt_trans_trade_price"/>

        <TextView
            android:id="@+id/tv_trans_price_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:background="@drawable/common_all_corner_shi"
            android:gravity="center"
            android:text="@string/trade_add"
            android:textColor="@color/trade_color_white"
            android:textSize="@dimen/login_button_text_size"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/trade_color_white"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="13dp"
        android:paddingTop="13dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/trans_buy_or_sale2"
            android:textSize="@dimen/text_size"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_trans_num_cut"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:background="@drawable/common_all_corner_shi"
            android:gravity="center"
            android:text="@string/trade_subtract"
            android:textColor="@color/trade_color_white"
            android:textSize="@dimen/login_button_text_size"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:hint="@string/trans_buy_or_sale13"
            android:textSize="@dimen/text_size"
            android:singleLine="true"
            android:inputType="number"
            android:textColorHint="@color/trade_text_color0"
            android:textColor="@color/trade_text_color6"
            android:id="@+id/edt_trans_trade_num"/>

        <TextView
            android:id="@+id/tv_trans_num_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:background="@drawable/common_all_corner_shi"
            android:gravity="center"
            android:text="@string/trade_add"
            android:textColor="@color/trade_color_white"
            android:textSize="@dimen/login_button_text_size"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/trans_buy_or_sale9"
            android:gravity="center"
            android:id="@+id/tv_trans_max_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="@string/no_text_set"
            android:gravity="center"
            android:textSize="@dimen/text_size"
            android:id="@+id/tv_trans_trade_max"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/trans_buy_or_sale11"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/trade_color_white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="13dp"
        android:paddingTop="13dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/trans_buy_or_sale3"
            android:textSize="@dimen/text_size"
            android:gravity="center"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="@string/trans_buy_or_sale14"
            android:textSize="@dimen/text_size"
            android:singleLine="true"
            android:inputType="number"
            android:textColorHint="@color/trade_text_color0"
            android:textColor="@color/trade_text_color6"
            android:id="@+id/edt_trans_trade_yue_num"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/trade_color_white"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="13dp"
        android:paddingTop="13dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/trans_buy_or_sale17"
            android:textSize="@dimen/text_size"
            android:gravity="center"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="@string/trans_buy_or_sale18"
            android:textSize="@dimen/text_size"
            android:singleLine="true"
            android:inputType="number"
            android:textColorHint="@color/trade_text_color0"
            android:textColor="@color/trade_text_color6"
            android:id="@+id/edt_trans_trade_out_xi"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/trade_color_white"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="13dp"
        android:paddingTop="13dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/trans_buy_or_sale19"
            android:textSize="@dimen/text_size"
            android:gravity="center"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="@string/trans_buy_or_sale20"
            android:textSize="@dimen/text_size"
            android:singleLine="true"
            android:inputType="number"
            android:textColorHint="@color/trade_text_color0"
            android:textColor="@color/trade_text_color6"
            android:id="@+id/edt_trans_trade_out_account"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/common_all_corner_shi"
        android:textColor="@color/trade_color_white"
        android:textSize="@dimen/text_size"
        android:id="@+id/btn_trans_trade_commit"/>

</LinearLayout>