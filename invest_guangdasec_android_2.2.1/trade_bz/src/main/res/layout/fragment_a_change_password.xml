<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/trade_normal_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/change_pwd_text"
        android:paddingLeft="10dp"
        android:textColor="@color/trade_text_color6"
        android:paddingRight="10dp"
        android:textSize="@dimen/text_size"/>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/trade_color_white"
        android:padding="2dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_pwd_old"
            android:layout_weight="0"
            android:textColor="@color/trade_text_color6"
            android:padding="10dp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:background="@color/trade_divide_line"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:textColorHint="@color/trade_text_color1"
            android:textSize="@dimen/abc_action_bar_content_inset_material"
            android:id="@+id/edt_pwd_old"
            android:digits="@string/change_pwd_regex"
            android:hint="@string/change_pwd_old_hint"
            android:inputType="numberPassword"
            android:singleLine="true"
            android:maxLength="12"
            android:background="@color/trade_color_white"/>

    </LinearLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"/>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/trade_color_white"
        android:padding="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_pwd_new"
            android:layout_weight="0"
            android:textColor="@color/trade_text_color6"
            android:padding="10dp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:background="@color/trade_divide_line"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:id="@+id/edt_pwd_new"
            android:textColorHint="@color/trade_text_color1"
            android:textSize="@dimen/abc_action_bar_content_inset_material"
            android:digits="@string/change_pwd_regex"
            android:inputType="numberPassword"
            android:singleLine="true"
            android:maxLength="12"
            android:hint="@string/change_pwd_new_hint"
            android:background="@color/trade_color_white"/>

    </LinearLayout>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/trade_color_white"
        android:padding="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_pwd_sure"
            android:layout_weight="0"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="3dp"
            android:textColor="@color/trade_text_color6"
            android:paddingRight="3dp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:background="@color/trade_divide_line"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:id="@+id/edt_pwd_sure"
            android:textColorHint="@color/trade_text_color1"
            android:textSize="@dimen/abc_action_bar_content_inset_material"
            android:hint="@string/change_pwd_sure_hint"
            android:digits="@string/change_pwd_regex"
            android:inputType="numberPassword"
            android:singleLine="true"
            android:maxLength="12"
            android:background="@color/trade_color_white"/>

    </LinearLayout>


    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"/>

    <Button
        android:id="@+id/btn_pwd_click"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/common_all_corner_shi"
        android:textSize="@dimen/login_button_text_size"
        android:textColor="@color/trade_color_white"
        android:text="@string/change_pwd_click"/>

</LinearLayout>