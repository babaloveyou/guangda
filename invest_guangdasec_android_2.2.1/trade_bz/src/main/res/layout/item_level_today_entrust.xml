<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/trade_color_white">

    <View android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/trade_normal_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tv_hfund_bs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_text_set"
            android:textColor="@color/trade_up_red"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/level_entrust1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"/>

        <TextView
            android:id="@+id/tv_hfund_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/no_text_set"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"/>

        <TextView
            android:id="@+id/tv_hfund_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/trade_buy"
            android:text="@string/no_text_set"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/trade_divide_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tv_hfund_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_text_set"
            android:textColor="@color/trade_color_black"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"/>

        <TextView
            android:id="@+id/tv_hfund_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_text_set"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/level_entrust2"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"/>

            <TextView
                android:id="@+id/tv_hfund_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/trade_color_black"
                android:text="@string/no_text_set"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/level_entrust3"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"/>

            <TextView
                android:id="@+id/tv_hfund_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/trade_color_black"
                android:text="@string/no_text_set"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>