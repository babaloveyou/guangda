<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/trade_color_white">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/select_table_item_height"
            android:layout_weight="1.3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_history_securit_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="@string/no_text_set"
                android:textStyle="bold"
                android:textColor="@color/trade_text_color6"
                android:textSize="@dimen/select_table_text"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_history_data"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/store_text_size"
                    android:gravity="center"
                    android:hint="@string/no_text_set"
                    android:textColor="@color/trade_text_color6"/>

                <TextView
                    android:id="@+id/tv_history_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/store_text_size"
                    android:gravity="center"
                    android:hint="@string/no_text_set"
                    android:textColor="@color/trade_text_color6"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/select_table_item_height"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_history_entrust_price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="@string/no_text_set"
                android:textColor="@color/trade_text_color6" />

            <TextView
                android:id="@+id/tv_history_trade_price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="@string/no_text_set"
                android:textColor="@color/trade_text_color6"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/select_table_item_height"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_history_entrust_num"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="@string/no_text_set"
                android:textColor="@color/trade_text_color6"/>


            <TextView
                android:id="@+id/tv_history_trade_number"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="@string/no_text_set"
                android:textColor="@color/trade_text_color6" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/select_table_item_height"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_history_entrust_bs"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/store_text_size"
                android:hint="@string/no_text_set"/>

            <TextView
                android:id="@+id/tv_history_entrust_status"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="@string/no_text_set"
                android:textColor="@color/trade_text_color6"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"/>

</LinearLayout>