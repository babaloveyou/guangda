<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/trade_color_white">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/select_table_item_height"
            android:layout_weight="1.2"
            android:orientation="vertical">

            <TextView android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/tv_history_trade_name"
                android:layout_weight="1"
                android:hint="@string/no_text_set"
                android:textStyle="bold"
                android:textSize="@dimen/select_table_text"
                android:textColor="@color/trade_text_color6"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/store_text_size"
                    android:gravity="center"
                    android:hint="@string/no_text_set"
                    android:id="@+id/tv_history_trade_data"
                    android:textColor="@color/trade_text_color6"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/store_text_size"
                    android:gravity="center"
                    android:hint="@string/no_text_set"
                    android:textColor="@color/trade_text_color6"
                    android:id="@+id/tv_history_trade_time"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/select_table_item_height"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/tv_history_trade_pric"
                android:hint="@string/no_text_set"
                android:layout_weight="1"
                android:textColor="@color/trade_text_color6"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/tv_history_trade_count"
                android:hint="@string/no_text_set"
                android:layout_weight="1"
                android:textColor="@color/trade_text_color6"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/select_table_item_height"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/tv_history_trade_money"
                android:hint="@string/no_text_set"
                android:layout_weight="1"
                android:textColor="@color/trade_text_color6"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/tv_history_trade_bs"
                android:hint="@string/no_text_set"
                android:layout_weight="1"
                android:textColor="@color/trade_text_color6"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"/>
</LinearLayout>