<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trade_normal_background">

    <!-- 正在加载时显示的界面 -->
    <LinearLayout
        android:id="@+id/ll_list_loading"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <ProgressBar
            android:id="@+id/fragment_ab_list_info_progressbar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:indeterminateDrawable="@drawable/rotate_blue_trade_refresh_progressbar"/>

        <TextView
            android:text="@string/home_loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:id="@+id/lin_have_data_set"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/one_key2"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"/>

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/trade_divide_line"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:padding="12dp"
            android:background="@color/trade_color_white"
            android:hint="@string/one_key_hint_select"
            android:id="@+id/tv_onem_out_account"
            android:drawableRight="@drawable/arrows_right_gray"
            android:drawablePadding="10dp"
            android:textSize="@dimen/text_size"/>


        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/trade_divide_line"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/one_key3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"/>

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/trade_divide_line"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:padding="12dp"
            android:background="@color/trade_color_white"
            android:hint="@string/one_key_hint_select"
            android:id="@+id/tv_onem_in_account"
            android:drawableRight="@drawable/arrows_right_gray"
            android:drawablePadding="10dp"
            android:textSize="@dimen/text_size"/>

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/trade_divide_line"/>

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/trade_divide_line"/>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/trade_color_white" >

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/one_key_transfer_money"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="@color/trade_text_color6"
                android:textSize="@dimen/buysell_button_text_size"/>

            <EditText android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:padding="12dp"
                android:id="@+id/edt_onem_money"
                android:singleLine="true"
                android:hint="@string/one_key_hint_input"
                android:inputType="numberDecimal"
                android:textSize="@dimen/text_size"
                android:maxLength="16"
                android:background="@color/trade_color_white"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/one_key_unit"
                android:layout_weight="0"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@color/trade_text_color6"
                android:textSize="@dimen/buysell_button_text_size"/>

        </LinearLayout>

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/trade_divide_line"/>

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/trade_divide_line"/>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/trade_color_white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/one_key_money_pwd"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="@color/trade_text_color6"
                android:textSize="@dimen/buysell_button_text_size" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:padding="12dp"
                android:id="@+id/edt_onem_pwd"
                android:singleLine="true"
                android:inputType="numberPassword"
                android:textSize="@dimen/text_size"
                android:hint="@string/one_key_hint_input"
                android:maxLength="6"
                android:background="@color/trade_color_white"/>

        </LinearLayout>

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/trade_divide_line" />

        <Button
            android:id="@+id/btn_onem_transfer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/common_all_corner_shi"
            android:textSize="@dimen/login_button_text_size"
            android:textColor="@color/trade_color_white"
            android:text="@string/bank_btn_commit" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lv_one_key_transfer"
            android:layout_marginTop="15dp"/>

    </LinearLayout>

</LinearLayout>