<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/r_cash_fragment"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/trade_normal_background"
              android:orientation="vertical">

    <!-- 正在加载时显示的界面 -->
    <LinearLayout
        android:id="@+id/lin_loading_set"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:indeterminateDrawable="@drawable/rotate_blue_trade_refresh_progressbar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/home_loading_text"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_main_french_gray"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:paddingLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/r_property_list8"
                android:textColor="@color/trade_text_color2"
                android:textSize="16sp"/>

            <TextView
                android:paddingRight="100dp"
                android:id="@+id/tv_r_cash_other"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:background="@color/bg_main_french_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:paddingLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/r_property_list7"
                android:textColor="@color/trade_text_color2"
                android:textSize="16sp"/>

            <TextView
                android:paddingRight="100dp"
                android:id="@+id/tv_r_cash_can_use"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/r_property_list5"
                android:textColor="@color/trade_text_color2"
                android:textSize="16sp"/>

            <com.thinkive.android.trade_bz.views.ClearEditText
                android:id="@+id/edt_r_cash_num"
                style="@style/style_login_ll"
                android:layout_width="0dp"
                android:paddingRight="20dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="@string/r_property_list6"
                android:inputType="numberDecimal"
                android:textColorHint="@color/trade_text_color9"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_r_return_all"
                android:layout_width="65dp"
                android:layout_height="25dp"
                android:background="@drawable/shape_bg_gradius4"
                android:clickable="true"
                android:gravity="center"
                android:text="全额还款"
                android:textColor="@color/statusbar_main"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="如果需要印证转账,请"
                android:textColor="@color/trade_text_color6"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_to_stock_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击这里"
                android:textColor="@color/trade_sale"
                android:textSize="12sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_r_cash_commit"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/selector_bg_btn_toactive"
            android:text="提交还款"
            android:textColor="#7c5d48"
            android:textSize="18sp"/>
    </LinearLayout>


</LinearLayout>

