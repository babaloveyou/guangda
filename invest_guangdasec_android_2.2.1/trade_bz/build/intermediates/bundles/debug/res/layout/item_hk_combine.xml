<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/trade_color_white"
              android:orientation="vertical">

    <View android:layout_width="match_parent"
          android:layout_height="10dp"
          android:background="@color/trade_normal_background"/>

    <!--第一栏-->
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/hk_select_item_height"
                  android:orientation="horizontal">

        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/hk_select_left_distances"
                  android:layout_weight="0.6"
                  android:text="@string/hk_combination_item0"
                  android:textSize="@dimen/hk_select_item"/>

        <TextView android:id="@+id/tv_sno"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1.3"
                  android:hint="@string/no_text_set"
                  android:textColor="@color/trade_text_color6"
                  android:textSize="@dimen/hk_select_item"/>

        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="0.6"
                  android:text="@string/hk_combination_item1"
                  android:textSize="@dimen/hk_select_item"/>
        <TextView android:id="@+id/tv_jsdate"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:hint="@string/no_text_set"
                  android:textColor="@color/trade_text_color6"
                  android:textSize="@dimen/hk_select_item"/>
    </LinearLayout>
    <!--第一栏-->
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/hk_select_left_distances"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:layout_weight="0.6"
                  android:text="@string/hk_combination_item2"
                  android:textSize="@dimen/hk_select_item"/>

        <TextView android:id="@+id/tv_debtsid"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:layout_weight="1.3"
                  android:hint="@string/no_text_set"
                  android:textColor="@color/trade_text_color6"
                  android:textSize="@dimen/hk_select_item"/>

        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:layout_weight="0.6"
                  android:text="@string/hk_combination_item3"
                  android:textSize="@dimen/hk_select_item"/>
        <TextView android:id="@+id/tv_qsdate"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:layout_weight="1"
                  android:hint="@string/no_text_set"
                  android:textColor="@color/trade_text_color6"
                  android:textSize="@dimen/hk_select_item"/>
    </LinearLayout>
    <!--第一栏-->
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/hk_select_left_distances"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:layout_weight="0.6"
                  android:text="@string/hk_combination_item4"
                  android:textSize="@dimen/hk_select_item"/>

        <TextView android:id="@+id/tv_settrate"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:layout_weight="1.3"
                  android:hint="@string/no_text_set"
                  android:textColor="@color/trade_text_color6"
                  android:textSize="@dimen/hk_select_item"/>

        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:layout_weight="0.6"
                  android:text="@string/hk_combination_item5"
                  android:textSize="@dimen/hk_select_item"/>
        <TextView android:id="@+id/tv_money_type_name"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:layout_weight="1"
                  android:hint="@string/no_text_set"
                  android:textColor="@color/trade_text_color6"
                  android:textSize="@dimen/hk_select_item"/>
    </LinearLayout>
    <!--第一栏-->
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/hk_select_left_distances"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:layout_weight="1"
                  android:text="@string/hk_combination_item6"
                  android:textSize="@dimen/hk_select_item"/>

        <TextView android:id="@+id/tv_combinfee_rmb"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:layout_weight="0.56"
                  android:hint="@string/no_text_set"
                  android:textColor="@color/trade_text_color6"
                  android:textSize="@dimen/hk_select_item"/>


        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:layout_weight="0.8"
                  android:text="@string/hk_combination_item7"
                  android:textSize="@dimen/hk_select_item"/>
        <TextView android:id="@+id/tv_lastmktvalue"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:layout_weight="0.5"
                  android:hint="@string/no_text_set"
                  android:textColor="@color/trade_text_color6"
                  android:textSize="@dimen/hk_select_item"/>
    </LinearLayout>
    <!--第一栏-->
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="@dimen/hk_select_item_height"
                  android:layout_marginLeft="@dimen/hk_select_left_distances"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:layout_weight="0.5"
                  android:text="@string/hk_combination_item8"
                  android:textSize="@dimen/hk_select_item"/>

        <TextView android:id="@+id/combinfee_hk"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="@dimen/hk_select_item_height"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:layout_weight="1"
                  android:hint="@string/no_text_set"
                  android:textColor="@color/trade_text_color6"
                  android:textSize="@dimen/hk_select_item"/>
    </LinearLayout>


</LinearLayout>