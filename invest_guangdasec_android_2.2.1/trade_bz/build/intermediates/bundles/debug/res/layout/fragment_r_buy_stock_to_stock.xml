<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trade_normal_background"
    android:orientation="vertical">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="horizontal"
        android:id="@+id/rg_buy_or_sale"
        android:visibility="visible">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:checked="true"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/r_order_three"
            android:textColor="@color/trade_color_white"
            android:background="@drawable/buy_selector_left"
            android:id="@+id/rb_buy_or_sale"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginLeft="-1dp"
            android:text="@string/r_return_contract"
            android:textColor="@color/trade_buy"
            android:background="@drawable/buy_selector_right"
            android:id="@+id/rb_select_contract" />

    </RadioGroup>

    <LinearLayout
        android:id="@+id/ll_r_choose_shock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/trade_color_white"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/contract_not20"
                android:textColor="@color/trade_text_color9"/>

            <TextView
                android:id="@+id/tv_r_choose_stock_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:hint="@string/r_choose_contract_loading"
                android:textColor="@color/trade_text_color6"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/arrows_right_gray"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/trade_color_white"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:id="@+id/ll_code_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/buy_no_corner_kong"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_stock_code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center|right"
                    android:hint="@string/trade_stock_code"
                    android:inputType="textNoSuggestions"
                    android:maxLength="6"
                    android:paddingRight="10dp"
                    android:textColor="@color/trade_text_color3"
                    android:textColorHint="@color/trade_text_color9"
                    android:textSize="@dimen/buysell_button_text_size"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/tv_stock_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="@string/trade_stock_name"
                    android:textColor="@color/trade_text_color9"
                    android:textSize="@dimen/buysell_button_text_size"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_up_limit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:paddingLeft="6dp"
                    android:text="@string/trade_rise_stop"
                    android:textColor="@color/trade_text_color9"
                    android:textSize="@dimen/trade_buysell_text_size"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/tv_up_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/tv_up_limit_text"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:hint="@string/blank"
                    android:textSize="@dimen/trade_buysell_text_size"
                    android:textColor="@color/trade_up_red"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/tv_down_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:minWidth="30dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/trade_down_green"
                    android:hint="@string/blank"
                    android:textSize="@dimen/trade_buysell_text_size"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/tv_down_limit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/tv_down_limit"
                    android:layout_weight="0"
                    android:gravity="center_vertical|right"
                    android:text="@string/trade_drop_stop"
                    android:textColor="@color/trade_text_color9"
                    android:textSize="@dimen/trade_buysell_text_size"
                    android:textStyle="normal"/>

            </RelativeLayout>

            <!--限价or市价-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:enabled="false"
                        android:gravity="center"
                        android:id="@+id/tv_trade_limit"
                        android:text="@string/trade_buy_rb2"
                        android:textColor="@color/trade_buy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/buy_selector_button"/>

                    <ImageView
                        android:id="@+id/iv_left_selected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/trade_buy_selected"
                        android:visibility="visible"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1">

                    <TextView
                        android:enabled="true"
                        android:gravity="center"
                        android:id="@+id/tv_trade_market"
                        android:text="@string/trade_buy_rb1"
                        android:textColor="@color/trade_buy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/buy_selector_button"/>

                    <ImageView
                        android:id="@+id/iv_right_selected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/trade_buy_selected"
                        android:visibility="invisible"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_input_price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/buy_no_corner_kong"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/ibt_subtract"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/trade_buy"
                    android:gravity="center"
                    android:text="@string/trade_subtract"
                    android:textColor="@color/trade_color_white"
                    android:textSize="21sp"/>

                <EditText
                    android:id="@+id/edt_stock_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:textColor="@color/trade_text_color3"
                    android:textColorHint="@color/trade_text_color9"
                    android:textSize="16sp"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/ibt_add"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/trade_buy"
                    android:gravity="center"
                    android:text="@string/trade_add"
                    android:textColor="@color/trade_color_white"
                    android:textSize="21sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/buy_no_corner_kong"
                android:orientation="horizontal"
                android:id="@+id/ll_market_entrust"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/trade_text_color9"
                    android:textSize="@dimen/buysell_button_text_size"
                    android:textStyle="normal"
                    android:hint="@string/one_key_hint_select"
                    android:textColorHint="@color/trade_text_color9"
                    android:id="@+id/tv_market_entrust"
                    android:visibility="visible"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/arrows_down_buy"
                    android:layout_marginRight="10dp"
                    android:id="@+id/tv_market_arrows"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_input_amount"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/buy_no_corner_kong"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ed_entrust_num"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="7"
                    android:paddingLeft="3dp"
                    android:textColor="@color/trade_text_color3"
                    android:textColorHint="@color/trade_text_color9"
                    android:textSize="@dimen/buysell_button_text_size"
                    android:textStyle="normal"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:text="@string/trade_stock"
                    android:id="@+id/tv_stock_unit"
                    android:textColor="@color/trade_text_color9"
                    android:textSize="@dimen/buysell_button_text_size"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_buy_or_sell"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/trade_buy"
                android:textColor="@color/trade_color_white"
                android:textSize="@dimen/buysell_button_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible">

            <!-- 卖五 -->
            <LinearLayout
                android:id="@+id/ll_sale5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/trade_wudang_text"
                    android:layout_weight="1"
                    android:text="@string/trade_sale5"
                    android:textColor="@color/trade_text_color9"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/tv_sale5_price"
                    style="@style/trade_wudang_text"
                    android:layout_weight="2"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/tv_sale5_amount"
                    style="@style/trade_wudang_text"
                    android:layout_weight="2"
                    android:textColor="@color/trade_text_color9"
                    android:textStyle="normal"/>

            </LinearLayout>

            <!-- 卖四 -->
            <LinearLayout
                android:id="@+id/ll_sale4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/trade_wudang_text"
                    android:layout_weight="1"
                    android:text="@string/trade_sale4"
                    android:textColor="@color/trade_text_color9"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/tv_sale4_price"
                    style="@style/trade_wudang_text"
                    android:layout_weight="2"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/tv_sale4_amount"
                    style="@style/trade_wudang_text"
                    android:layout_weight="2"
                    android:textColor="@color/trade_text_color9"
                    android:textStyle="normal"/>


            </LinearLayout>

            <!-- 卖三 -->
            <LinearLayout
                android:id="@+id/ll_sale3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/trade_wudang_text"
                    android:layout_weight="1"
                    android:text="@string/trade_sale3"
                    android:textColor="@color/trade_text_color9"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/tv_sale3_price"
                    style="@style/trade_wudang_text"
                    android:layout_weight="2"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/tv_sale3_amount"
                    style="@style/trade_wudang_text"
                    android:layout_weight="2"
                    android:textColor="@color/trade_text_color9"
                    android:textStyle="normal"/>


            </LinearLayout>

            <!-- 卖二 -->
            <LinearLayout
                android:id="@+id/ll_sale2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    style="@style/trade_wudang_text"
                    android:layout_weight="1"
                    android:text="@string/trade_sale2"
                    android:textColor="@color/trade_text_color9"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/tv_sale2_price"
                    style="@style/trade_wudang_text"
                    android:layout_weight="2"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/tv_sale2_amount"
                    style="@style/trade_wudang_text"
                    android:layout_weight="2"
                    android:textColor="@color/trade_text_color9"
                    android:textStyle="normal"/>


            </LinearLayout>

            <!-- 卖一 -->
            <LinearLayout
                android:id="@+id/ll_sale1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/trade_wudang_text"
                    android:layout_weight="1"
                    android:text="@string/trade_sale1"
                    android:textColor="@color/trade_text_color9"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/tv_sale1_price"
                    style="@style/trade_wudang_text"
                    android:layout_weight="2"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/tv_sale1_amount"
                    style="@style/trade_wudang_text"
                    android:layout_weight="2"
                    android:textColor="@color/trade_text_color9"
                    android:textStyle="normal"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/trade_divide_line"/>

            <!-- 买一 -->
            <LinearLayout
                android:id="@+id/ll_buy1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/trade_wudang_text"
                    android:layout_weight="1"
                    android:text="@string/trade_buy1"
                    android:textColor="@color/trade_text_color9"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/tv_buy1_price"
                    style="@style/trade_wudang_text"
                    android:layout_weight="2"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/tv_buy1_amount"
                    style="@style/trade_wudang_text"
                    android:layout_weight="2"
                    android:textColor="@color/trade_text_color9"
                    android:textStyle="normal"/>


            </LinearLayout>

            <!-- 买二 -->
            <LinearLayout
                android:id="@+id/ll_buy2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/trade_wudang_text"
                    android:layout_weight="1"
                    android:text="@string/trade_buy2"
                    android:textColor="@color/trade_text_color9"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/tv_buy2_price"
                    style="@style/trade_wudang_text"
                    android:layout_weight="2"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/tv_buy2_amount"
                    style="@style/trade_wudang_text"
                    android:layout_weight="2"
                    android:textColor="@color/trade_text_color9"
                    android:textStyle="normal"/>


            </LinearLayout>

            <!-- 买三 -->
            <LinearLayout
                android:id="@+id/ll_buy3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/trade_wudang_text"
                    android:layout_weight="1"
                    android:text="@string/trade_buy3"
                    android:textColor="@color/trade_text_color9"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/tv_buy3_price"
                    style="@style/trade_wudang_text"
                    android:layout_weight="2"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/tv_buy3_amount"
                    style="@style/trade_wudang_text"
                    android:layout_weight="2"
                    android:textColor="@color/trade_text_color9"
                    android:textStyle="normal"/>


            </LinearLayout>

            <!-- 买四 -->
            <LinearLayout
                android:id="@+id/ll_buy4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/trade_wudang_text"
                    android:layout_weight="1"
                    android:text="@string/trade_buy4"
                    android:textColor="@color/trade_text_color9"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/tv_buy4_price"
                    style="@style/trade_wudang_text"
                    android:layout_weight="2"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/tv_buy4_amount"
                    style="@style/trade_wudang_text"
                    android:layout_weight="2"
                    android:textColor="@color/trade_text_color9"
                    android:textStyle="normal"/>


            </LinearLayout>

            <!-- 买五 -->
            <LinearLayout
                android:id="@+id/ll_buy5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/trade_wudang_text"
                    android:layout_weight="1"
                    android:text="@string/trade_buy5"
                    android:textColor="@color/trade_text_color9"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/tv_buy5_price"
                    style="@style/trade_wudang_text"
                    android:layout_weight="2"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/tv_buy5_amount"
                    style="@style/trade_wudang_text"
                    android:layout_weight="2"
                    android:textColor="@color/trade_text_color9"
                    android:textStyle="normal"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/trade_normal_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/trade_color_white"
        android:id="@+id/lin_head_contract"
        android:visibility="visible">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/r_hold_pager7"
            android:textColor="@color/trade_text_color6"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/r_hold_pager8"
            android:textColor="@color/trade_text_color6" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/r_hold_pager9"
            android:textColor="@color/trade_text_color6"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/r_hold_pager10"
            android:textColor="@color/trade_text_color6"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"/>

    <!-- 正在加载时显示的界面 -->
    <LinearLayout
        android:id="@+id/ll_buy_or_sell_list_loading"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:background="@color/trade_color_white"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <ProgressBar
            android:id="@+id/fragment_ab_list_info_progressbar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:indeterminateDrawable="@drawable/rotate_blue_trade_refresh_progressbar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/home_loading_text"/>

    </LinearLayout>

    <!--暂无数据时界面-->
    <LinearLayout
        android:id="@+id/lin_not_data_set"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:orientation="vertical"
        android:background="@color/trade_color_white"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:src="@drawable/not_data_listview"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="@string/no_data_listview"
            android:textColor="@color/trade_text_color6"
            android:textSize="@dimen/lsv_no_data_text"/>

    </LinearLayout>

    <ListView
        android:id="@+id/lv_show_stock"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:scrollbars="none"
        android:visibility="gone"/>

</LinearLayout>