<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/trade_color_white">

    <View android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/trade_normal_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin_level_revocation"
        android:background="@drawable/selector_press_list_item">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.7"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center|left"
            android:layout_marginLeft="10dp">

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_text_set"
                android:id="@+id/tv_security_name"
                android:textSize="@dimen/text_size"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_text_set"
                android:id="@+id/tv_security_number"
                android:paddingTop="1dp"
                android:textColor="@color/trade_text_color6"/>

        </LinearLayout>

        <LinearLayout android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1.3"
            android:gravity="center|left"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="5dp">

            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/revocation_time"
                    android:padding="1dp"
                    android:textColor="@color/trade_text_color9" />

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_text_set"
                    android:paddingLeft="3dp"
                    android:id="@+id/tv_revocation_time"
                    android:textColor="@color/trade_text_color6" />

            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/revocation_entrust_value"
                    android:padding="1dp"
                    android:textColor="@color/trade_text_color9"/>

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_text_set"
                    android:paddingLeft="3dp"
                    android:id="@+id/tv_entrust_value"
                    android:textColor="@color/trade_text_color6"/>

            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/revocation_trade_value"
                    android:padding="1dp"
                    android:textColor="@color/trade_text_color9" />

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_text_set"
                    android:id="@+id/tv_trade_value"
                    android:paddingLeft="3dp"
                    android:textColor="@color/trade_text_color6"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp">

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>

            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/revocation_entrust_count"
                    android:padding="1dp"
                    android:textColor="@color/trade_text_color9"/>

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_text_set"
                    android:id="@+id/tv_entrust_count"
                    android:paddingLeft="3dp"
                    android:textColor="@color/trade_text_color6"/>

            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/revocation_trade_count"
                    android:padding="1dp"
                    android:textColor="@color/trade_text_color9"/>

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_text_set"
                    android:id="@+id/tv_trade_count"
                    android:paddingLeft="3dp"
                    android:textColor="@color/trade_text_color6"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>