<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_main_french_gray"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/rl_bgoftoolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/statusbar_main"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:src="@mipmap/back_arrow"/>

        <TextView
            android:id="@+id/tb_showname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="一键归集"
            android:textColor="@color/white"
            android:textSize="18sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_main_french_gray"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_onekey"
                style="@style/tv_tab_top"
                android:text="一键归集"/>

            <View
                android:id="@+id/indcator_left"
                android:layout_width="64dp"
                android:layout_height="1.5dp"
                android:background="@color/statusbar_main"/>
        </LinearLayout>

        <TextView
            android:layout_width=".5dp"
            android:layout_height="match_parent"
            android:background="#e5e5e5"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_onekey_money"
                style="@style/tv_tab_top"
                android:text="资金转账"/>

            <View
                android:id="@+id/indcator_right"
                android:layout_width="64dp"
                android:layout_height="1.5dp"
                android:background="@color/statusbar_main"/>
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_container_childe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

    </FrameLayout>

</LinearLayout>