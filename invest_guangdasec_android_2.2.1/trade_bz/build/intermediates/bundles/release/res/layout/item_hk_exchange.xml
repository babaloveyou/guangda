                  android:text="@string/hk_exchange_item5"
                  android:textSize="@dimen/hk_select_item"/>
        <TextView android:id="@+id/tv_settrate"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:layout_weight="1"
                  android:hint="@string/no_text_set"
                  android:textColor="@color/trade_text_color6"
                  android:textSize="@dimen/hk_select_item"/>
    </LinearLayout>
    <!--第一栏-->
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/hk_select_left_distances"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:layout_weight="0.75"
                  android:text="@string/hk_exchange_item6"
                  android:textSize="@dimen/hk_select_item"/>

        <TextView android:id="@+id/tv_daybuyriserate"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:layout_weight="1"
                  android:hint="@string/no_text_set"
                  android:textColor="@color/trade_text_color6"
                  android:textSize="@dimen/hk_select_item"/>

    </LinearLayout>
    <!--第一栏-->
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/hk_select_left_distances"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:layout_weight="0.75"
                  android:text="@string/hk_exchange_item7"
                  android:textSize="@dimen/hk_select_item"/>

        <TextView android:id="@+id/tv_daysaleriserate"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:layout_weight="1"
                  android:hint="@string/no_text_set"
                  android:textColor="@color/trade_text_color6"
                  android:textSize="@dimen/hk_select_item"/>

    </LinearLayout>
    <!--第一栏-->
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">


        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="@dimen/hk_select_item_height"
                  android:layout_marginLeft="@dimen/hk_select_left_distances"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:layout_weight="0.75"
                  android:text="@string/hk_exchange_item8"
                  android:textSize="@dimen/hk_select_item"/>

        <TextView android:id="@+id/tv_sysdate"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="@dimen/hk_select_item_height"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:layout_weight="1"
                  android:hint="@string/no_text_set"
                  android:textColor="@color/trade_text_color6"
                  android:textSize="@dimen/hk_select_item"/>
    </LinearLayout>

</LinearLayout>