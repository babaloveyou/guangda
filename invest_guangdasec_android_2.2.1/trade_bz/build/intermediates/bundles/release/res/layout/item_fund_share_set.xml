<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/trade_color_white">

    <View android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/trade_normal_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:hint="@string/no_text_set"
            android:gravity="center"
            android:textColor="@color/trade_text_color3"
            android:id="@+id/tv_share_set_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:hint="@string/no_text_set"
            android:id="@+id/tv_share_set_code"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:hint="@string/no_text_set"
            android:gravity="center"
            android:id="@+id/tv_share_set_status"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fund_share_set2"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="3dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/no_text_set"
                android:gravity="center"
                android:paddingTop="3dp"
                android:paddingBottom="8dp"
                android:textColor="@color/trade_text_color3"
                android:id="@+id/tv_share_set_profit"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fund_share_set3"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="3dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/no_text_set"
                android:gravity="center"
                android:paddingTop="3dp"
                android:paddingBottom="8dp"
                android:textColor="@color/trade_text_color3"
                android:id="@+id/tv_share_set_market"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fund_share_set4"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="3dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/no_text_set"
                android:gravity="center"
                android:paddingTop="3dp"
                android:paddingBottom="8dp"
                android:textColor="@color/trade_text_color3"
                android:id="@+id/tv_share_set_hold"/>

        </LinearLayout>

    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="10dp"
        android:id="@+id/rg_radio_group_share"
        android:descendantFocusability="blocksDescendants">

        <TextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="0.9"
            android:text="@string/fund_buy_zero0"
            android:gravity="center"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:text="@string/fund_share_set0"
            android:textColor="@color/trade_color1"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/rb_share_set_hold"
            android:focusable = "false" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:text="@string/fund_share_set1"
            android:textColor="@color/trade_color1"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:id="@+id/rb_share_set_cash"
            android:focusable = "false" />
    </RadioGroup>
</LinearLayout>