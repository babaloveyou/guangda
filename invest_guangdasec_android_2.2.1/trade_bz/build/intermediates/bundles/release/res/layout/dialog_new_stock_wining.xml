<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:layout_marginBottom="10dp">

    <LinearLayout android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textColor="@color/trade_color_black"
           android:id="@+id/tv_win_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
           android:id="@+id/tv_win_code"
            android:layout_marginLeft="3dp"
            android:textColor="@color/trade_color_black"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>


    <LinearLayout android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number_winning_tprice"
            android:layout_weight="0"
            android:layout_marginRight="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_win_count"
            android:textColor="@color/trade_color_black"
            android:layout_weight="0"/>

    </LinearLayout>


    <LinearLayout android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number_winning_tcount"
            android:layout_weight="0"
            android:layout_marginRight="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_win_cur_sort"
            android:textColor="@color/trade_color_black"
            android:layout_weight="0"/>

    </LinearLayout>


    <LinearLayout android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="6dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number_winning_tcoun2"
            android:layout_weight="0"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:background="@drawable/common_no_corner_transparent"
            android:singleLine="true"
            android:textColor="@color/trade_color_black"
            android:textSize="@dimen/navigation_back_text_size"
            android:paddingLeft="5dp"
            android:id="@+id/edt_win_change_sort"
            android:inputType="number"/>

    </LinearLayout>

</LinearLayout>