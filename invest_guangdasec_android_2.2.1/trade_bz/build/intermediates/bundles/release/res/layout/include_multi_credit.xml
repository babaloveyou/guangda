<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:background="@color/statusbar_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="45dp">

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:background="@null"
        android:drawableLeft="@drawable/arrows_left_white"
        android:gravity="left|center_vertical"
        android:paddingRight="20dp"
        android:singleLine="true"
        android:textColor="@color/trade_color_white"
        android:textSize="@dimen/navigation_back_text_size"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawableLeft="@mipmap/back_arrow"
        android:gravity="center_vertical"
        android:text="@string/deal_on_creadit"
        android:textColor="@color/white"
        android:textSize="18dp"
        />
</RelativeLayout>