<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:layout_marginBottom="10dp"
    >

    <LinearLayout android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="6dp">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_stock_name"
            android:id="@+id/tv_pop_name_text"
            android:textColor="@color/trade_text_color6" />

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/no_text_set"
            android:id="@+id/tv_pop_name"
            android:textColor="@color/trade_color_black"
            android:paddingLeft="4dp"/>

    </LinearLayout>

    <LinearLayout android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="6dp">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_stock_code"
            android:id="@+id/tv_pop_code_text"
            android:textColor="@color/trade_text_color6"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/no_text_set"
            android:id="@+id/tv_pop_code"
            android:textColor="@color/trade_color_black"
            android:paddingLeft="4dp"/>

    </LinearLayout>

    <LinearLayout android:layout_width="150dp"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:paddingTop="6dp">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/dialog_time"
                  android:id="@+id/tv1"
                  android:textColor="@color/trade_text_color6"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_pop_time"
                  android:hint="@string/no_text_set"
                  android:textColor="@color/trade_color_black"
                  android:paddingLeft="4dp"/>

    </LinearLayout>

    <LinearLayout android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="6dp">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_price"
            android:id="@+id/tv2"
            android:textColor="@color/trade_text_color6"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_pop_price"
            android:hint="@string/no_text_set"
            android:textColor="@color/trade_color_black"
            android:paddingLeft="4dp"/>

    </LinearLayout>

    <LinearLayout android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="6dp" >

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_entrust"
            android:id="@+id/tv3"
            android:textColor="@color/trade_text_color6" />

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_pop_entrust_number"
            android:textColor="@color/trade_color_black"
            android:hint="@string/no_text_set"
            android:paddingLeft="4dp" />

    </LinearLayout>


</LinearLayout>