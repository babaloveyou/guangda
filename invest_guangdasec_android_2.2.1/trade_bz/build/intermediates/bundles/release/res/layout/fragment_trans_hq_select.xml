<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trade_normal_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:text="@string/trans_stock13"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="@dimen/text_size"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/rg_trans_hq">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:background="@drawable/common_selector_left1"
            android:id="@+id/rb_trans_hq_all"
            android:text="@string/trans_select4"
            android:textColor="@color/trade_color_white"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/common_selector_center1"
            android:id="@+id/rb_trans_hq_buy"
            android:text="@string/trans_select5"
            android:textColor="@color/trade_color1"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/common_selector_right1"
            android:id="@+id/rg_trans_sale"
            android:text="@string/trans_select6"
            android:textColor="@color/trade_color1"/>

    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="@color/trade_color_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/trans_buy_or_sale0"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="@color/trade_text_color3"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:background="@null"
            android:paddingRight="10dp"
            android:inputType="number"
            android:singleLine="true"
            android:textSize="@dimen/navigation_back_text_size"
            android:maxLength="6"
            android:hint="@string/fund_input_hint"
            android:id="@+id/edt_trans_hq_input"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/common_all_corner_shi"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:textSize="@dimen/login_button_text_size"
        android:text="@string/home_query"
        android:textColor="@color/trade_color_white"
        android:id="@+id/btn_trans_hq_select"/>

</LinearLayout>