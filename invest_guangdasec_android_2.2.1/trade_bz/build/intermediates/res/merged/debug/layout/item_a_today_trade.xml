<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_list_item_view"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/trade_color_white"
              android:orientation="vertical">
    <LinearLayout
        android:background="@drawable/selector_press_list_item2"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/tv_name"
            android:text="浦发银行"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/text_et_input_french_black"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_code"
            android:layout_marginLeft="5dp"
            android:text="000000"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/text_reming"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/trade_normal_background"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_title_status"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/limit_price_tobuy"
                android:gravity="center"
                android:textSize="@dimen/select_table_text"
                android:textColor="@color/trade_text_color9" />
            <TextView
                android:id="@+id/tv_time"
                android:text="11:10:11"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/select_table_text"
                android:textColor="@color/trade_text" />
        </LinearLayout>
        <View
            android:layout_gravity="center_vertical"
            android:layout_width="0.5dp"
            android:layout_height="30dp"
            android:background="@color/trader_door_gv_divider"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="编号/金额"
                    android:gravity="center"
                    android:textSize="@dimen/select_table_text"
                    android:textColor="@color/trade_text_color9" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="成交信息"
                    android:gravity="center"
                    android:textSize="@dimen/select_table_text"
                    android:textColor="@color/trade_text_color9" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:orientation="vertical">
                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/tv_entrust_info"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/select_table_text"
                        android:textColor="@color/trade_text_color9" />
                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/tv_trunover_info"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/select_table_text"
                        android:textColor="@color/trade_text_color9" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/trade_normal_background"/>

    <!-- 横向显示三个按钮的LinearLayout -->
    <LinearLayout
        android:id="@+id/ll_list_item_expand"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_item_expend_buy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_bg_btn_buy"
                android:drawableLeft="@mipmap/btn_buy"
                android:drawablePadding="-30dp"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:text="@string/listview_expand_buy"
                android:textColor="@color/white"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_item_expend_sale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="7.5dp"
                android:layout_marginRight="7.5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_bg_btn_sell"
                android:drawableLeft="@mipmap/btn_sale"
                android:drawablePadding="-30dp"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:text="@string/listview_expand_sale"
                android:textColor="@color/white"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_item_expend_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_bg_btn_hq"
                android:drawableLeft="@mipmap/btn_hq"
                android:drawablePadding="-30dp"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:text="@string/listview_expand_xq"

                android:textColor="@color/white"/>
        </FrameLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/trade_normal_background"/>

    <View
        android:id="@+id/view_indicator"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/bg_main_french_gray"/>

</LinearLayout>