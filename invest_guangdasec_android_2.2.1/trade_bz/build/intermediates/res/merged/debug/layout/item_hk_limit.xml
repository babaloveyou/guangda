<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/trade_color_white"
              android:orientation="vertical">

    <View android:layout_width="match_parent"
          android:layout_height="10dp"
          android:background="@color/trade_normal_background"/>

    <!--第一栏-->
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/hk_select_left_distances"
                  android:layout_marginTop="@dimen/hk_select_item_height"
                  android:layout_weight="1"
                  android:text="@string/hk_quota_item0"
                  android:textSize="@dimen/hk_select_item"/>

        <TextView android:id="@+id/tv_exchange_type_name"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/hk_select_item_height"
                  android:layout_weight="1"
                  android:hint="@string/no_text_set"
                  android:textColor="@color/trade_text_color6"
                  android:textSize="@dimen/hk_select_item"/>

        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/hk_select_item_height"
                  android:layout_weight="1"
                  android:text="@string/hk_quota_item1"
                  android:textSize="@dimen/hk_select_item"/>

        <TextView android:id="@+id/tv_total_quota"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/hk_select_item_height"
                  android:layout_weight="1"
                  android:hint="@string/no_text_set"
                  android:textColor="@color/trade_text_color6"
                  android:textSize="@dimen/hk_select_item"/>
    </LinearLayout>

    <!--第一栏-->
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/hk_select_left_distances"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:layout_weight="1"
                  android:text="@string/hk_quota_item2"
                  android:textSize="@dimen/hk_select_item"/>

        <TextView android:id="@+id/tv_surplus_quota"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:layout_weight="1"
                  android:hint="@string/no_text_set"
                  android:textColor="@color/trade_text_color6"
                  android:textSize="@dimen/hk_select_item"/>

        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:layout_weight="1"
                  android:text="@string/hk_quota_item3"
                  android:textSize="@dimen/hk_select_item"/>

        <TextView android:id="@+id/tv_product_status"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:layout_weight="1"
                  android:hint="@string/no_text_set"
                  android:textColor="@color/trade_text_color6"
                  android:textSize="@dimen/hk_select_item"/>

    </LinearLayout>

    <!--第一栏-->
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="@dimen/hk_select_item_height"
                  android:layout_marginLeft="@dimen/hk_select_left_distances"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:layout_weight="1"
                  android:text="@string/hk_quota_item4"
                  android:textSize="@dimen/hk_select_item"/>

        <TextView android:id="@+id/tv_mkttrdstatus_name"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="@dimen/hk_select_item_height"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:layout_weight="1"
                  android:hint="@string/no_text_set"
                  android:textColor="@color/trade_text_color6"
                  android:textSize="@dimen/hk_select_item"/>

        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="@dimen/hk_select_item_height"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:layout_weight="1"
                  android:text="@string/hk_quota_item5"
                  android:textSize="@dimen/hk_select_item"/>

        <TextView android:id="@+id/tv_upddate"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="@dimen/hk_select_item_height"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:layout_weight="1"
                  android:hint="@string/no_text_set"
                  android:textColor="@color/trade_text_color6"
                  android:textSize="@dimen/hk_select_item"/>
    </LinearLayout>

</LinearLayout>