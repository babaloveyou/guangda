<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/trade_normal_background"
              android:orientation="vertical">

    <!-- 正在加载时显示的界面 -->
    <LinearLayout
        android:id="@+id/lin_loading_set"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <ProgressBar
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:indeterminateDrawable="@drawable/rotate_blue_trade_refresh_progressbar"/>

        <TextView
            android:text="@string/home_loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:id="@+id/rg_return_stock"
        android:visibility="visible">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:checked="true"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/r_order_four"
            android:textColor="@color/trade_color_white"
            android:background="@drawable/common_selector_left1"
            android:id="@+id/rb_return_stock"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginLeft="-1dp"
            android:text="@string/r_return_contract"
            android:textColor="@color/trade_color1"
            android:background="@drawable/common_selector_right1"
            android:id="@+id/rb_select_contract" />

    </RadioGroup>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/trade_color_white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lin_r_stock_return_pop"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/r_collater_ed_hint"
                android:textColor="@color/trade_text_color6"
                android:textSize="@dimen/buysell_button_text_size"/>

            <TextView
                android:id="@+id/tv_r_stock_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:hint="@string/one_key_hint_select"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/arrows_right_gray"
                android:textSize="@dimen/buysell_button_text_size"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_r_choose_stock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <!--分割线-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/trade_divide_line"/>

            <TextView
                android:id="@+id/tv_r_choose_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/contract_not20"
                android:textColor="@color/trade_text_color6"
                android:textSize="@dimen/buysell_button_text_size"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="@string/one_key_hint_select"
                android:padding="10dp"
                android:textSize="@dimen/buysell_button_text_size"
                android:paddingLeft="10dp"
                android:drawableRight="@drawable/arrows_right_gray"
                android:drawablePadding="10dp"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_select_contract"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/trade_color_white"
        android:orientation="vertical"
        android:text="@string/r_collater_ed_hint"
        android:textColor="@color/trade_text_color6"
        android:textSize="@dimen/buysell_button_text_size">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/r_return_stock_number"
                android:textColor="@color/trade_text_color6"
                android:textSize="@dimen/buysell_button_text_size"/>

            <TextView
                android:id="@+id/tv_r_return_stock_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:hint="@string/no_text_set"/>
        </RelativeLayout>

        <!--分割线-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/trade_divide_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/r_return_stock_max_number"
                android:textColor="@color/trade_text_color6"
                android:textSize="@dimen/buysell_button_text_size"/>

            <TextView
                android:id="@+id/tv_r_return_stock_max_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_r_return_stock_all"
                android:padding="10dp"
                android:hint="@string/no_text_set"/>

                <TextView
                    android:id="@+id/tv_r_return_stock_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="@string/r_return_stock_all"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/trade_color_white"
                    android:background="@drawable/common_all_corner_shi"
                    android:textSize="@dimen/buysell_button_text_size"
                    android:padding="5dp"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/trade_color_white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/distributeNum_item_count"
            android:textColor="@color/trade_text_color6"
            android:textSize="@dimen/buysell_button_text_size"/>

        <TextView
            android:id="@+id/ibt_subtract"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/common_all_corner_shi"
            android:gravity="center"
            android:text="@string/trade_subtract"
            android:textColor="@color/trade_color_white"
            android:textSize="21sp"/>

        <EditText
            android:id="@+id/edt_stock_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="@null"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/trade_text_color3"
            android:textColorHint="@color/trade_text_color9"
            android:textSize="16sp"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/ibt_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/common_all_corner_shi"
            android:gravity="center"
            android:text="@string/trade_add"
            android:textColor="@color/trade_color_white"
            android:textSize="21sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_r_stock_return_commit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/common_all_corner_shi"
        android:text="@string/r_commit_delegation"
        android:textColor="@color/trade_color_white"
        android:textSize="@dimen/login_button_text_size"/>

</LinearLayout>
