<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:thinkive="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:drawableLeft="@drawable/back_black"
        android:id="@+id/back"
        android:layout_marginTop="12dp"
        android:drawablePadding="5dp"
        android:layout_marginLeft="12dp"
        android:visibility="gone"
        />

    <LinearLayout
        android:id="@+id/top_area"
        android:layout_below="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <com.android.thinkive.gesturelock.CircleThumbnail
            android:id="@+id/account_large_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            thinkive:bct_size="small" />

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/account_info"
            android:textSize="18sp" />

    </LinearLayout>

    <com.android.thinkive.gesturelock.LockPatternView
        android:id="@+id/lock_pattern_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_area"
        android:padding="12dp" />

    <TextView
        android:id="@+id/tv_use_other_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="30dip"
        android:layout_marginLeft="30dip"
        android:clickable="true"
        android:text="@string/use_other_account_login"
        android:textColor="#816E6A"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dip"
        android:layout_marginRight="30dip"
        android:clickable="true"
        android:text="@string/forget_gesture_pwd"
        android:textColor="#816E6A"
        android:textSize="18sp" />
</RelativeLayout><!-- From: file:/D:/SVN/WebApp_mall/viewlibrary/src/main/res/layout/activity_verify_lock_pattern.xml -->