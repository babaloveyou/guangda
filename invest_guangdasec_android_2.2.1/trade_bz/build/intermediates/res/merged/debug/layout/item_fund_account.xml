<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/trade_color_white">

    <View android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/trade_normal_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_fund_name_account"
            android:hint="@string/no_text_set"
            android:textSize="@dimen/fund_test_paper_content"
            android:paddingTop="8dp"
            android:layout_weight="1"
            android:textColor="@color/trade_text_color3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fund_open"
            android:textSize="@dimen/select_table_text"
            android:paddingTop="8dp"/>

        <TextView
            android:id="@+id/tv_open_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/no_text_set"
            android:textSize="@dimen/fund_test_paper_content"
            android:paddingTop="8dp"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/trade_divide_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:paddingBottom="8dp"
            android:text="@string/fund_account0"
            android:textSize="@dimen/select_table_text" />

        <TextView
            android:id="@+id/tv_fselect_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingBottom="8dp"
            android:layout_weight="1"
            android:hint="@string/no_text_set"
            android:textColor="@color/trade_text_color3"
            android:textSize="@dimen/select_table_text" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:paddingBottom="8dp"
            android:text="@string/fund_account1"
            android:textSize="@dimen/select_table_text" />

        <TextView
            android:id="@+id/tv_fselect_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingBottom="8dp"
            android:layout_weight="1"
            android:hint="@string/no_text_set"
            android:textColor="@color/trade_text_color3"
            android:textSize="@dimen/select_table_text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:paddingBottom="8dp"
            android:text="@string/fund_account2"
            android:textSize="@dimen/select_table_text" />

        <TextView
            android:id="@+id/tv_fselect_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="8dp"
            android:hint="@string/no_text_set"
            android:textColor="@color/trade_text_color3"
            android:textSize="@dimen/select_table_text" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:paddingBottom="8dp"
            android:text="@string/fund_account1"
            android:textSize="@dimen/select_table_text" />

        <TextView
            android:id="@+id/tv_fselect_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="8dp"
            android:hint="@string/no_text_set"
            android:textColor="@color/trade_text_color3"
            android:textSize="@dimen/select_table_text" />

    </LinearLayout>
</LinearLayout>