<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/trade_color_white">

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:text="@string/one_key_bank_name"
        android:gravity="center"
        android:textColor="@color/trade_text_color9"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:text="@string/one_key_account_type"
        android:gravity="center"
        android:textColor="@color/trade_text_color9"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/one_key_money_other"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:textColor="@color/trade_text_color9"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/one_key_can_transfer"
        android:gravity="center"
        android:textColor="@color/trade_text_color9"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>
</LinearLayout>