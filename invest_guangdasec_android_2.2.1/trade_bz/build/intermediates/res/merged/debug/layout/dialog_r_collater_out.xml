<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_centerHorizontal="true"
              android:background="@color/white"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/r_layout_rb22"
        android:textColor="@color/trade_text_color2"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_name_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/trade_text_color2"
        android:textSize="12sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_common_bg_of_edittext">

        <EditText
            android:id="@+id/edt_amount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="10"
            android:singleLine="true"
            android:textColor="@color/trade_text_color2"
            android:textColorHint="@color/trade_text_color9"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="股"
            android:textColor="@color/trade_top_tab_dark_gray"
            android:textSize="12sp"
            android:visibility="gone"/>
    </LinearLayout>
    <!-- 横向显示三个按钮的LinearLayout -->
    <LinearLayout
        android:id="@+id/ll_today_entrust_list_item_expand"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_out"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="7.5dp"
                android:background="@drawable/shape_bg_btn_sell"
                android:gravity="center"
                android:text="转出"
                android:textColor="@color/white"
                android:textSize="18sp"
                />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_cancle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="7.5dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/shape_common_bg_of_edittext_corner"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/trade_text_color6"
                android:textSize="18sp"
                />
        </FrameLayout>


    </LinearLayout>

</LinearLayout>