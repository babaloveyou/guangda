<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trade_normal_background">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/trade_divide_line"/>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/trade_color_white"
            android:layout_weight="1">

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fund_transe1"
                android:layout_weight="0"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/trade_text_color6"
                android:textSize="@dimen/buysell_button_text_size"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:hint="@string/fund_input_hint2"
                    android:padding="10dp"
                    android:id="@+id/tv_out_fund_trans_out"
                    android:textSize="@dimen/buysell_button_text_size"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/arrows_right_gray"/>

        </LinearLayout>

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/trade_divide_line"/>

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/trade_divide_line"
            android:layout_marginTop="10dp"/>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fund_pledge1"
                android:layout_weight="0"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/trade_text_color6"
                android:textSize="@dimen/buysell_button_text_size"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:hint="@string/no_text_set"
                android:padding="10dp"
                android:id="@+id/tv_out_fund_profit"
                android:textSize="@dimen/buysell_button_text_size"/>

        </LinearLayout>

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/trade_divide_line"/>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fund_account10"
                android:layout_weight="0"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/trade_text_color6"
                android:textSize="@dimen/buysell_button_text_size"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:hint="@string/no_text_set"
                android:padding="10dp"
                android:id="@+id/tv_out_fund_company"
                android:textSize="@dimen/buysell_button_text_size"/>

        </LinearLayout>

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/trade_divide_line"/>

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/trade_divide_line"
            android:layout_marginTop="10dp"/>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/trade_color_white">

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fund_account13"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/trade_text_color6"
                android:textSize="@dimen/buysell_button_text_size"/>

            <EditText android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:padding="10dp"
                android:hint="@string/fund_input_hint"
                android:id="@+id/edt_trans_organ_code"
                android:background="@null"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="@dimen/buysell_button_text_size"/>

        </LinearLayout>

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/trade_divide_line"/>

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/trade_divide_line"
            android:layout_marginTop="10dp"/>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/trade_color_white">

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fund_transe2"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/trade_text_color6"
                android:textSize="@dimen/buysell_button_text_size"/>

            <EditText android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:padding="10dp"
                android:hint="@string/fund_input_hint"
                android:id="@+id/edt_trans_num"
                android:background="@null"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="@dimen/buysell_button_text_size"/>

        </LinearLayout>

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/trade_divide_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fund_transe5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/no_text_set"
                android:id="@+id/tv_can_trans_num"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fund_transe6"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_fund_trans"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/common_all_corner_shi"
            android:textSize="@dimen/login_button_text_size"
            android:textColor="@color/trade_color_white"
            android:text="@string/fund_commit" />

    </LinearLayout>

</LinearLayout>