<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/trade_normal_background">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/trade_color_white">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="@string/dialog_stock_code"
            android:textColor="@color/trade_text_color3"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/hk_vote0"
            android:textSize="@dimen/select_table_text"
            android:background="@null"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:singleLine="true"
            android:inputType="number"
            android:maxLength="5"
            android:gravity="center_vertical|right"
            android:paddingRight="10dp"
            android:id="@+id/edt_hk_action_stock_code"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="@string/dialog_stock_name"
            android:textColor="@color/trade_text_color3"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/no_text_set"
            android:textSize="@dimen/select_table_text"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center_vertical|right"
            android:paddingRight="10dp"
            android:id="@+id/tv_hk_action_name"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/trade_divide_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/trade_color_white">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="@string/hk_vote6"
            android:textColor="@color/trade_text_color3"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/hk_company_action4"
            android:textSize="@dimen/select_table_text"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center_vertical|right"
            android:drawablePadding="10dp"
            android:layout_marginRight="10dp"
            android:drawableRight="@drawable/arrows_right_gray"
            android:id="@+id/tv_hk_action_type1"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/trade_color_white">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="@string/hk_vote7"
            android:textColor="@color/trade_text_color3"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/hk_company_action4"
            android:textSize="@dimen/select_table_text"
            android:drawableRight="@drawable/arrows_right_gray"
            android:layout_marginRight="10dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical|right"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/tv_hk_action_type2"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/trade_color_white">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="@string/hk_vote8"
            android:textColor="@color/trade_text_color3"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/hk_company_action1"
            android:textSize="@dimen/select_table_text"
            android:background="@null"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:singleLine="true"
            android:inputType="number"
            android:gravity="center_vertical|right"
            android:paddingRight="10dp"
            android:id="@+id/edt_hk_action_code"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/trade_color_white">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="@string/hk_vote9"
            android:textColor="@color/trade_text_color3"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/hk_company_action0"
            android:textSize="@dimen/select_table_text"
            android:background="@null"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:singleLine="true"
            android:inputType="number"
            android:gravity="center_vertical|right"
            android:paddingRight="10dp"
            android:id="@+id/edt_hk_action_entrust_num"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"/>

    <Button
        android:id="@+id/btn_hk_action_commit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/common_all_corner_shi"
        android:textSize="@dimen/login_button_text_size"
        android:textColor="@color/trade_color_white"
        android:text="@string/hk_order2"/>

</LinearLayout>