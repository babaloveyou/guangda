<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/trade_color_white"
              android:orientation="vertical">

    <View android:layout_width="match_parent"
          android:layout_height="10dp"
          android:background="@color/trade_normal_background"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/hk_select_left_distances"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:orientation="horizontal"
                  android:padding="4dp">
        <TextView
            android:id="@+id/tv_stock_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/no_text_set"
            android:textColor="@color/trade_text_color6"
            android:textSize="@dimen/hk_select_title"
        />
        <TextView
            android:id="@+id/tv_stock_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:hint="@string/no_text_set"
            android:textSize="@dimen/hk_select_title"
        />
    </LinearLayout>

    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:background="@color/trade_divide_line"/>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:orientation="horizontal">

        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/hk_select_left_distances"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:layout_weight="1.3"
                  android:text="@string/hk_secutitiese_item0"
                  android:textSize="@dimen/hk_select_item"/>

        <TextView android:id="@+id/tv_zstrdstatusName"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:layout_weight="1"
                  android:hint="@string/no_text_set"
                  android:textColor="@color/trade_text_color6"
                  android:textSize="@dimen/hk_select_item"/>

        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:layout_weight="1.3"
                  android:text="@string/hk_secutitiese_item1"
                  android:textSize="@dimen/hk_select_item"/>
        <TextView android:id="@+id/tv_lgtrdstatusName"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:layout_weight="1"
                  android:hint="@string/no_text_set"
                  android:textColor="@color/trade_text_color6"
                  android:textSize="@dimen/hk_select_item"/>
    </LinearLayout>

    <!--第二栏-->

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="@dimen/hk_select_left_distances"
                  android:layout_marginTop="@dimen/hk_select_height"
                  android:orientation="horizontal">

        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/hk_select_left_distances"
                  android:layout_weight="0.4"
                  android:text="@string/hk_secutitiese_item2"
                  android:textSize="@dimen/hk_select_item"/>

        <TextView android:id="@+id/tv_update_date"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:hint="@string/no_text_set"
                  android:textColor="@color/trade_text_color6"
                  android:textSize="@dimen/hk_select_item"/>

    </LinearLayout>

</LinearLayout>