<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/trade_normal_background">

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/trade_color_white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/in_fund_code_title"
            android:padding="10dp"
            android:gravity="center"
            android:id="@+id/tv_in_fund_code_title"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="@string/in_fund_input_hint"
            android:gravity="center|right"
            android:textSize="@dimen/text_size"
            android:textColorHint="@color/trade_text_color0"
            android:textColor="@color/trade_text_color6"
            android:inputType="number"
            android:maxLength="6"
            android:singleLine="true"
            android:background="@color/transparent"
            android:paddingRight="10dp"
            android:id="@+id/tv_in_fund_code_input"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/in_fund_name_title"
            android:padding="10dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="@string/no_text_set"
            android:gravity="center|right"
            android:paddingRight="10dp"
            android:id="@+id/tv_in_fund_name_show"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"/>
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/in_fund_net_value_title"
            android:padding="10dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="@string/no_text_set"
            android:gravity="center|right"
            android:paddingRight="10dp"
            android:id="@+id/tv_in_fund_net_value_show"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"/>
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/in_fund_subscription_upper_limit_ll">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/in_fund_subscription_upper_limit_title"
            android:padding="10dp"
            android:gravity="center"
            android:id="@+id/in_fund_subscription_upper_limit_title"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="@string/no_text_set"
            android:gravity="center|right"
            android:paddingRight="10dp"
            android:id="@+id/tv_in_fund_subscription_upper_limit_show"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="match_parent"
            android:text="全部"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/common_all_corner_shi"
            android:textColor="@color/trade_color_white"
            android:id="@+id/tv_in_fund_subscription_all_button"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/trade_color_white"
        android:orientation="horizontal"
        android:id="@+id/in_fund_subscription_money_ll">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/in_fund_subscription_money_title"
            android:padding="10dp"
            android:gravity="center"
            android:id="@+id/in_fund_subscription_money_title"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="@string/in_fund_input_hint"
            android:gravity="center|right"
            android:id="@+id/tv_in_fund_subscription_money_input"
            android:textSize="@dimen/text_size"
            android:textColorHint="@color/trade_text_color0"
            android:textColor="@color/trade_text_color6"
            android:paddingRight="10dp"
            android:background="@color/transparent"
            android:inputType="numberDecimal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:id="@+id/in_fund_purchase_upper_limit_ll">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/in_fund_purchase_upper_limit_title"
            android:padding="10dp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="@string/no_text_set"
            android:gravity="center|right"
            android:paddingRight="10dp"
            android:id="@+id/tv_in_fund_purchase_upper_limit_show"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="match_parent"
            android:text="@string/in_fund_purchase_all_button_name"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/common_all_corner_shi"
            android:textColor="@color/trade_color_white"
            android:id="@+id/tv_in_fund_purchase_all_button"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"/>
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/trade_color_white"
        android:orientation="horizontal"
        android:visibility="gone"
        android:id="@+id/in_fund_purchase_money_ll">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/in_fund_purchase_money_title"
            android:padding="10dp"
            android:gravity="center"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="@string/in_fund_input_hint"
            android:gravity="center|right"
            android:id="@+id/tv_in_fund_purchase_money_input"
            android:textSize="@dimen/text_size"
            android:textColorHint="@color/trade_text_color0"
            android:textColor="@color/trade_text_color6"
            android:paddingRight="10dp"
            android:background="@color/transparent"
            android:inputType="numberDecimal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可用资金："
            android:gravity="center"
            android:textColor="@color/trade_text_color6"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_text_set"
            android:gravity="center"
            android:id="@+id/tv_in_fund_available_funds_show"
            android:textColor="@color/trade_color_black"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:gravity="center"
            android:textColor="@color/trade_text_color6"
            android:textSize="16sp"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/in_fund_purchase_or_subscription_submit_name"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/common_all_corner_shi"
        android:textColor="@color/trade_color_white"
        android:textSize="@dimen/login_button_text_size"
        android:id="@+id/tv_in_fund_purchase_or_subscription_submit"/>

</LinearLayout>
