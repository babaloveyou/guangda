<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/tab_replace_toolbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/statusbar_main"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_tab_normal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/shape_bg_trade_tab_normal"
                    android:gravity="center"
                    android:text="普通交易"/>

                <TextView
                    android:id="@+id/tv_tab_credit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/shape_bg_trade_tab_credit"
                    android:gravity="center"
                    android:text="信用交易"/>
            </LinearLayout>

            <TextView
                android:textColor="@color/selector_tv_login"
                android:id="@+id/tv_login"
                android:layout_width="40dp"
                android:textSize="14sp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="登录"/>
        </RelativeLayout>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>