<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trade_normal_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sign_agreement0"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"/>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/trade_color_white">

        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="@string/sign_agreement1"
            android:textSize="@dimen/text_size"/>

        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:padding="12dp"
            android:hint="@string/sign_agreement3"
            android:drawableRight="@drawable/arrows_right_gray"
            android:drawablePadding="10dp"
            android:id="@+id/tv_select_stock_account"
            android:textSize="@dimen/text_size"/>

    </LinearLayout>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/trade_color_white">

        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="@string/sign_agreement2"
            android:textSize="@dimen/text_size"/>

        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:padding="12dp"
            android:hint="@string/sign_agreement17"
            android:drawableRight="@drawable/arrows_right_gray"
            android:drawablePadding="10dp"
            android:id="@+id/tv_select_business_type"
            android:textSize="@dimen/text_size"/>

    </LinearLayout>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:gravity="center"
            android:text="@string/sign_agreement4"
            android:textSize="@dimen/text_size"/>

        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:padding="12dp"
            android:hint="@string/no_text_set"
            android:id="@+id/tv_open_status"
            android:textSize="@dimen/text_size"/>

    </LinearLayout>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_agreement5"
        android:layout_marginLeft="50dp"
        android:textColor="@color/trade_text_color6"
        android:layout_marginTop="10dp"
        android:id="@+id/checkbox_agreement"
        android:textSize="@dimen/select_table_text"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/sign_agreement6"
        android:textColor="@color/trade_color1"
        android:id="@+id/tv_click_warn_book"
        android:textSize="@dimen/select_table_text"/>

    <Button
        android:id="@+id/btn_click_open"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/common_all_corner_shi"
        android:textSize="@dimen/login_button_text_size"
        android:textColor="@color/trade_color_white"
        android:text="@string/sign_agreement7"/>

</LinearLayout>