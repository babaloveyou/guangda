<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/trade_normal_background"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/change_pwd_text"
        android:textColor="@color/trade_text_color9"
        android:textSize="@dimen/trade_buysell_text_size"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/trade_color_white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        >


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="left|center_vertical"
            android:minWidth="120dp"
            android:text="@string/change_pwd_old"
            android:textColor="@color/trade_text_color6"
            android:textSize="14sp"/>


        <EditText
            android:id="@+id/edt_pwd_old"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@color/trade_color_white"
            android:digits="@string/change_pwd_regex"
            android:hint="@string/change_pwd_new_hint"
            android:inputType="numberPassword"
            android:maxLength="12"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColorHint="@color/trade_text_color9"
            android:textSize="@dimen/abc_action_bar_content_inset_material"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="@color/trader_door_gv_divider"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/trade_color_white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center_vertical|left"
            android:minWidth="120dp"
            android:text="@string/change_pwd_new"
            android:textColor="@color/trade_text_color6"
            android:textSize="14sp"
            />


        <EditText
            android:id="@+id/edt_pwd_new"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@color/trade_color_white"
            android:digits="@string/change_pwd_regex"
            android:hint="@string/change_pwd_new_hint"
            android:inputType="numberPassword"
            android:maxLength="12"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColorHint="@color/trade_text_color9"
            android:textSize="@dimen/abc_action_bar_content_inset_material"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="@color/trader_door_gv_divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/trade_color_white"
        android:orientation="horizontal"
        android:paddingLeft="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:minWidth="120dp"
            android:text="@string/change_pwd_sure"
            android:textColor="@color/trade_text_color6"
            android:textSize="14sp"
            />


        <EditText
            android:id="@+id/edt_pwd_sure"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@color/trade_color_white"
            android:digits="@string/change_pwd_regex"
            android:hint="@string/change_pwd_new_hint"
            android:inputType="numberPassword"
            android:maxLength="12"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColorHint="@color/trade_text_color9"
            android:textSize="@dimen/abc_action_bar_content_inset_material"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"/>

    <Button
        android:id="@+id/btn_pwd_click"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/selector_bg_btn_toactive"
        android:text="提交"
        android:textColor="@color/tv_bt_brown"
        android:textSize="@dimen/lsv_no_data_text"/>

</LinearLayout>