<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/trade_color_white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="11111"
            android:id="@+id/tv_one_key_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:textColor="@color/trade_top_tab_dark_gray"
            android:textSize="14sp"/>

        <HorizontalScrollView
            android:scrollbars="none"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_gravity="center"
                android:text="11111"
                android:id="@+id/tv_one_key_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               android:gravity="center"
                android:textColor="@color/trade_top_tab_dark_gray"
                android:textSize="14sp"/>
        </HorizontalScrollView>
        <HorizontalScrollView
            android:scrollbars="none"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        <TextView
            android:layout_gravity="center"
            android:text="111111"
            android:id="@+id/tv_one_key_money"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/trade_top_tab_dark_gray"
            android:textSize="14sp"/>
        </HorizontalScrollView>
        <HorizontalScrollView
            android:paddingRight="15dp"
            android:scrollbars="none"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        <TextView
            android:layout_gravity="right"
            android:id="@+id/tv_one_key_can_use"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/trade_top_tab_dark_gray"
            android:textSize="14sp"/>

        </HorizontalScrollView>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"/>

</LinearLayout>