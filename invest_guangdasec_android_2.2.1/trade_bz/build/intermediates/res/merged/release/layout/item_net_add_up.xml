<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/trade_color_white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/trade_normal_background"
        android:id="@+id/tv_divide_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:hint="@string/no_text_set"
            android:gravity="center"
            android:id="@+id/tv_v_id"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/no_text_set"
            android:gravity="center_vertical|left"
            android:id="@+id/tv_vote_info"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:hint="@string/no_text_set"
            android:gravity="center"
            android:id="@+id/tv_vote_leijino"
            android:visibility="gone"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:singleLine="true"
            android:background="@drawable/common_all_corner_white"
            android:textColor="@color/trade_text_color9"
            android:visibility="visible"
            android:textSize="@dimen/select_table_text"
            android:id="@+id/tv_input_num"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_normal_background"/>

</LinearLayout>