<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trade_normal_background">

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/trade_divide_line"/>

    <TextView
        android:id="@+id/tv_today_entrust"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/option_main15"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="8dp"
        android:textColor="@color/trade_text_color6"
        android:background="@color/trade_color_white"
        android:drawableRight="@drawable/arrows_right_gray"/>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"/>

    <TextView
        android:id="@+id/tv_today_trade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/option_main16"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="8dp"
        android:textColor="@color/trade_text_color6"
        android:background="@color/trade_color_white"
        android:drawableRight="@drawable/arrows_right_gray"/>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"/>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/trade_divide_line"/>

    <TextView
        android:id="@+id/tv_history_entrust"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/option_main17"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="8dp"
        android:textColor="@color/trade_text_color6"
        android:background="@color/trade_color_white"
        android:drawableRight="@drawable/arrows_right_gray"/>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"/>

    <TextView
        android:id="@+id/tv_history_trade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/option_main18"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="8dp"
        android:textColor="@color/trade_text_color6"
        android:background="@color/trade_color_white"
        android:drawableRight="@drawable/arrows_right_gray"/>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"/>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/trade_divide_line"/>

    <TextView
        android:id="@+id/tv_hold_stock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/option_main19"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="8dp"
        android:textColor="@color/trade_text_color6"
        android:background="@color/trade_color_white"
        android:drawableRight="@drawable/arrows_right_gray"/>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"/>

    <TextView
        android:id="@+id/tv_history_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/option_main20"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="8dp"
        android:textColor="@color/trade_text_color6"
        android:background="@color/trade_color_white"
        android:drawableRight="@drawable/arrows_right_gray"/>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"/>

    <TextView
        android:id="@+id/tv_option_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/option_main21"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="8dp"
        android:textColor="@color/trade_text_color6"
        android:background="@color/trade_color_white"
        android:drawableRight="@drawable/arrows_right_gray"/>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"/>

</LinearLayout>