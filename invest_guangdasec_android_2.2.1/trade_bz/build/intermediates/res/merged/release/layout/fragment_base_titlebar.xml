<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/re_root_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_bar_height"
        android:background="@color/trade_color1"
        android:visibility="visible">

        <Button
            android:id="@+id/btn_back_in_fragment"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/arrows_left_white"
            android:background="@color/transparent"
            android:paddingRight="20dp"
            android:textColor="@color/trade_color_white"
            android:textSize="@dimen/new_subscribe_text"
            android:visibility="gone"
            android:text="@string/app_name"/>

        <Button
            android:id="@+id/btn_account_fragment"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/person"
            android:background="@null"
            android:drawablePadding="10dp"
            android:textStyle="bold"
            android:textColor="@color/trade_color_white"
            android:textSize="@dimen/new_subscribe_text"
            android:visibility="visible"
            android:text="asd"/>

        <TextView
            android:id="@+id/tv_title_in_fragment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="@dimen/navigation_title_text_size"
            android:visibility="gone"
            android:textColor="@color/trade_color_white"
            android:text="@string/app_name"/>
        <Button
            android:id="@+id/btn_logout_in_fragment"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="@dimen/new_subscribe_text"
            android:text="@string/trade_logout"
            android:background="@null"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textColor="@color/trade_color_white"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/fl_fragment_sub_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</LinearLayout>