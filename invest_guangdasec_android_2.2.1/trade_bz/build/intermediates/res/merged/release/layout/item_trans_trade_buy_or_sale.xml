<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trade_color_white">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_trans_trade_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="@string/no_text_set"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="2dp"
            android:textColor="@color/trade_text_color6" />

        <TextView
            android:id="@+id/tv_trans_trade_code"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="@string/no_text_set"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:textColor="@color/trade_text_color6"/>

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/trade_divide_line"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_trans_trade_bs"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="@string/no_text_set"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="2dp"
            android:textColor="@color/trade_text_color6"/>

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/trade_divide_line"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_trans_trade_count"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="@string/no_text_set"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="2dp"
            android:textColor="@color/trade_text_color6"/>

        <TextView
            android:id="@+id/tv_trans_trade_price"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="@string/no_text_set"
            android:paddingBottom="4dp"
            android:gravity="center"
            android:textColor="@color/trade_text_color6" />

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/trade_divide_line"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1.3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_trans_trade_yue_num"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="@string/no_text_set"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="2dp"
            android:textColor="@color/trade_text_color6"/>

        <TextView
            android:id="@+id/tv_trans_trade_xi_num"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="@string/no_text_set"
            android:paddingBottom="4dp"
            android:gravity="center"
            android:textColor="@color/trade_text_color6"/>

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/trade_divide_line"/>

    </LinearLayout>

</LinearLayout>