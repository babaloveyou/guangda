<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trade_color_white"
    android:orientation="vertical">

    <View android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/trade_normal_background"/>


    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_stock_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/hk_select_left_distances"
            android:hint="@string/no_text_set"
            android:paddingBottom="2dp"
            android:paddingTop="4dp"
            android:textColor="@color/trade_text_color6"
            android:textSize="@dimen/hk_select_title"
            />
        <TextView
            android:id="@+id/tv_stock_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:hint="@string/no_text_set"
            android:layout_marginLeft="5dp"
            android:paddingBottom="2dp"
            android:paddingTop="4dp"
            android:textSize="@dimen/hk_select_title"
            />

        <TextView
            android:id="@+id/tv_report_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/no_text_set"
            android:paddingBottom="2dp"
            android:paddingTop="4dp"
            android:textColor="@color/trade_text_color6"
            android:textSize="@dimen/hk_select_title"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_apply_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:hint="@string/no_text_set"
            android:paddingBottom="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:paddingTop="4dp"
            android:textSize="@dimen/hk_select_title"
            />

    </LinearLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/trade_divide_line"/>

    <!--第一栏-->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/hk_select_left_distances"
            android:layout_marginTop="@dimen/hk_select_item_height"
            android:layout_weight="0.7"
            android:text="@string/hk_voting_trust_item0"
            android:textSize="@dimen/hk_select_item"/>

        <TextView android:id="@+id/tv_placard_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hk_select_item_height"
            android:layout_weight="1"
            android:hint="@string/no_text_set"
            android:textColor="@color/trade_text_color6"
            android:textSize="@dimen/hk_select_item"/>

        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hk_select_item_height"
            android:layout_weight="0.7"
            android:text="@string/hk_voting_trust_item1"
            android:textSize="@dimen/hk_select_item"/>
        <TextView android:id="@+id/tv_motion_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="@dimen/hk_select_item_height"
            android:layout_weight="1"
            android:hint="@string/no_text_set"
            android:textColor="@color/trade_text_color6"
            android:textSize="@dimen/hk_select_item"/>
    </LinearLayout>

    <!--第一栏-->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/hk_select_left_distances"
            android:layout_marginTop="@dimen/hk_select_height"
            android:layout_weight="0.7"
            android:text="@string/hk_voting_trust_item2"
            android:textSize="@dimen/hk_select_item"/>

        <TextView android:id="@+id/tv_approve_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hk_select_height"
            android:layout_weight="1"
            android:hint="@string/no_text_set"
            android:textColor="@color/trade_text_color6"
            android:textSize="@dimen/hk_select_item"/>

        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hk_select_height"
            android:layout_weight="0.7"
            android:text="@string/hk_voting_trust_item3"
            android:textSize="@dimen/hk_select_item"/>
        <TextView android:id="@+id/tv_oppose_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="@dimen/hk_select_height"
            android:layout_weight="1"
            android:hint="@string/no_text_set"
            android:textColor="@color/trade_text_color6"
            android:textSize="@dimen/hk_select_item"/>
    </LinearLayout>

    <!--第一栏-->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/hk_select_left_distances"
            android:layout_marginTop="@dimen/hk_select_height"
            android:layout_weight="0.7"
            android:text="@string/hk_voting_trust_item4"
            android:textSize="@dimen/hk_select_item"/>

        <TextView android:id="@+id/tv_waive_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hk_select_height"
            android:layout_weight="1"
            android:hint="@string/no_text_set"
            android:textColor="@color/trade_text_color6"
            android:textSize="@dimen/hk_select_item"/>

        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hk_select_height"
            android:layout_weight="0.7"
            android:text="@string/hk_voting_trust_item5"
            android:textSize="@dimen/hk_select_item"/>
        <TextView android:id="@+id/tv_trust_status_fj"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="@dimen/hk_select_height"
            android:layout_weight="1"
            android:hint="@string/no_text_set"
            android:textColor="@color/trade_text_color6"
            android:textSize="@dimen/hk_select_item"/>
    </LinearLayout>

    <!--第一栏-->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/hk_select_left_distances"
            android:layout_marginTop="@dimen/hk_select_height"
            android:layout_marginBottom="@dimen/hk_select_height"
            android:layout_weight="0.25"
            android:text="@string/hk_voting_trust_item6"
            android:textSize="@dimen/hk_select_item"/>

        <TextView android:id="@+id/tv_business_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hk_select_height"
            android:layout_marginBottom="@dimen/hk_select_height"
            android:layout_weight="1"
            android:hint="@string/no_text_set"
            android:textColor="@color/trade_text_color6"
            android:textSize="@dimen/hk_select_item"/>

    </LinearLayout>

</LinearLayout>