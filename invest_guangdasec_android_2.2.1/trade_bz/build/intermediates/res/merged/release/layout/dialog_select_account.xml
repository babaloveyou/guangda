<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/dialog_account_switch_tip"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/trade_divide_line"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_account_normal"
        android:id="@+id/tv_account_switch_normal"
        android:gravity="center"
        android:background="@drawable/common_all_corner_transparent"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:visibility="gone"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_account_credit"
        android:id="@+id/tv_account_switch_credit"
        android:gravity="center"
        android:background="@drawable/common_all_corner_transparent"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_account_option"
        android:id="@+id/tv_account_switch_option"
        android:gravity="center"
        android:background="@drawable/common_all_corner_transparent"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:visibility="gone"/>

</LinearLayout>