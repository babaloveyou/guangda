<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_whole_login_fragment"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:layout_height="200dp"
              android:orientation="vertical"
              android:paddingLeft="15dp"
              android:paddingRight="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">
        <TextView
            android:text="维持担保比例"
            android:layout_marginTop="18dp"
            android:textSize="12sp"
            android:textColor="@color/trade_text_color2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:hint="--"
                android:id="@+id/tv_keep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/trade_text_color3"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/tv_holdpager_bank"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_bg_btn_buy"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="银行转账"
                android:textColor="@color/white"
                android:textSize="12sp"/>

        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/trader_door_gv_divider"
        android:visibility="visible"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:paddingTop="3.5dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="总资产(RMB元)"
                        android:textColor="@color/trade_text_color9"
                        android:textSize="@dimen/trade_buysell_text_size"/>

                    <TextView
                        android:hint="--"
                        android:paddingBottom="3dp"
                        android:id="@+id/tv_total_assets"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/trade_text_color2"
                        android:textSize="@dimen/select_table_text"/>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:paddingTop="3.5dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="净资产"
                        android:textColor="@color/trade_text_color9"
                        android:textSize="@dimen/trade_buysell_text_size"/>

                    <TextView
                        android:hint="--"
                        android:paddingBottom="3dp"
                        android:id="@+id/tv_net_assets"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/trade_text_color2"
                        android:textSize="@dimen/select_table_text"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:paddingTop="3.5dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="总负债"
                        android:textColor="@color/trade_text_color9"
                        android:textSize="@dimen/trade_buysell_text_size"/>

                    <TextView
                        android:hint="--"
                        android:paddingBottom="3dp"
                        android:id="@+id/tv_total_indebtedness"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/trade_text_color2"
                        android:textSize="@dimen/select_table_text"/>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_querry_indebtedness"
                        android:paddingRight="55dp"
                        android:drawableRight="@mipmap/show_more_arrwo"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="资产负债汇总查询"
                        android:textColor="@color/statusbar_main"
                        android:textSize="@dimen/trade_buysell_text_size"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>